<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddAgendamentoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_add"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:text="Novo Agendamento"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtNomePacienteAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do Paciente"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtDataAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data (DD/MM/AAAA)"
            android:focusable="false"
            android:inputType="date" />

        <EditText
            android:id="@+id/edtHorarioInicioAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Horário de Início"
            android:focusable="false"
            android:inputType="time" />

        <EditText
            android:id="@+id/edtHorarioTerminoAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Horário de Término"
            android:focusable="false"
            android:inputType="time" />

        <Button
            android:id="@+id/btnSalvarAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Salvar Agendamento" />

    </LinearLayout>

</LinearLayout>